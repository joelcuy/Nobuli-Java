<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activity.AdminQuizAddActivity">

    <ImageView
        android:id="@+id/imageView_adminQuizAdd_imageUpload"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorGray"
        android:src="@drawable/outline_add_photo" />

    <ProgressBar
        android:id="@+id/progressBar_adminQuizAdd_uploadProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:indeterminate="false"
        android:visibility="gone"
        android:min="0"
        android:max="0"
        android:progress="1"/>

    <TextView
        android:id="@+id/textView_adminQuizAdd_textQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Question: "
        android:textSize="18dp" />

    <EditText
        android:id="@+id/editText_adminQuizAdd_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter question"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_adminQuizAdd_textAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer: "
            android:textSize="18dp" />

        <Spinner
            android:id="@+id/spinner_adminQuizAdd_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp" />
    </LinearLayout>

    <Button
        android:id="@+id/button_adminQuizAdd_saveQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="save" />

</LinearLayout>