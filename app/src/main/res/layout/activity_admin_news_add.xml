<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AdminNewsAddActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView_adminNewsAdd_imageUpload"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorGray"
            android:src="@drawable/outline_add_photo" />

        <ProgressBar
            android:id="@+id/progressBar_adminNewsAdd_uploadProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:indeterminate="false"
            android:visibility="gone"
            android:min="0"
            android:max="0"
            android:progress="1"/>

        <TextView
            android:id="@+id/textView_adminNewsAdd_textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Title: "
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editText_adminNewsAdd_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter title"
            android:paddingLeft="0dp"
            android:paddingRight="0dp" />

        <TextView
            android:id="@+id/textView_adminQuizAdd_textContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Content: "
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editText_adminNewsAdd_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter content"
            android:inputType="textMultiLine"
            android:paddingLeft="0dp"
            android:paddingRight="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_adminNewsAdd_textDatePosted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Date Posted:"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView_adminNewsAdd_datePosted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Today's Date]"
                android:textSize="18dp" />
        </LinearLayout>

        <Button
            android:id="@+id/button_adminNewsAdd_saveNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="save" />


    </LinearLayout>

</ScrollView>