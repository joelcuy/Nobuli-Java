<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activity.AdminNewsAddActivity">

    <TextView
        android:id="@+id/textView_adminNewsAdd_textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title: "
        android:textSize="18dp" />

    <EditText
        android:id="@+id/editText_adminNewsAdd_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter title"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" />

    <TextView
        android:id="@+id/textView_adminQuizAdd_textContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Content: "
        android:textSize="18dp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editText_adminNewsAdd_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:hint="Enter content"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:inputType="textMultiLine"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_adminNewsAdd_textDatePosted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Posted:"
            android:textSize="18dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/textView_adminNewsAdd_datePosted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="<Today's Date>"
            android:textSize="18dp" />
    </LinearLayout>

    <Button
        android:id="@+id/button_adminNewsAdd_saveNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="save" />

</LinearLayout>